    <script type="text/x-kendo-tmpl" id="template">
        <div class="article-category-view k-widget">
            <div class="edit-buttons">
                <a class="k-button k-button-icontext k-edit-button" href="\\#"><span class="k-icon k-edit"></span></a>
                <a class="k-button k-button-icontext k-delete-button" href="\\#"><span class="k-icon k-delete"></span></a>
            </div>
            <dl>
                <dt>Tên hạng mục</dt>
                <dd>#:ArticleCategoryName#</dd>
                <dt>Loại hạng mục</dt>
                <dd>#:ArticleCategoryType#</dd>
                <dt>Ngôn ngữ</dt>
                <dd>#:LanguageCode#</dd>
                <dt>Mô tả</dt>
                <dd>#:Description#</dd>
            </dl>
        </div>
    </script>

    <script type="text/x-kendo-tmpl" id="editTemplate">
        <div class="article-category-view k-widget">
            <div class="edit-buttons">
                <a class="k-button k-button-icontext k-update-button" href="\\#"><span class="k-icon k-update"></span></a>
                <a class="k-button k-button-icontext k-cancel-button" href="\\#"><span class="k-icon k-cancel"></span></a>
            </div>
            <dl>
                <input type="hidden" data-bind="value:ArticleCategoryID" name="ArticleCategoryID"/>
                <dt>Tên hạng mục</dt>
                <dd>
                    <input type="text" class="k-textbox" data-bind="value:ArticleCategoryName" name="ArticleCategoryName" required="required" validationMessage="không được trống" />
                    <span data-for="ArticleCategoryName" class="k-invalid-msg"></span>
                </dd>
                <dt>Loại hạng mục</dt>
                <dd>
                    <select data-role="dropdownlist" data-bind="value:ArticleCategoryType" name="ArticleCategoryType" required="required" validationMessage="không được trống">  
                       <option value="Introduction">Giới thiệu</option>  
                       <option value="News">Tin tức</option>
                       <option value="Activity">Hoạt động</option> 
                       <option value="Room">Phòng</option> 
                       <option value="Contact">Liên hệ</option>
                       <option value="Notification">Thông báo</option>
                       <option value="Information">Thông tin</option>
                    </select>
                    <span data-for="ArticleCategoryType" class="k-invalid-msg"></span>
                </dd>
                <dt>Ngôn ngữ</dt>
                <dd>
                    <select data-role="dropdownlist" data-bind="value:LanguageCode" name="LanguageCode" required="required" validationMessage="không được trống">  
                       <option value="vi-VN">Tiếng Việt</option>
                       <option value="en-US">Tiếng Anh</option>
                       <option value="ru-RU">Tiếng Nga</option>
                    </select>
                    <span data-for="ArticleCategoryType" class="k-invalid-msg"></span>
                </dd>
                <dt>Mô tả</dt>
                <dd>
                    <input type="text" class="k-textbox" data-bind="value:Description" name="Description"/>
                </dd>
            </dl>
        </div>
    </script>

