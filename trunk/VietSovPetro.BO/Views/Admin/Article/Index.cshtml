<div id="example" class="k-content">
    <div id="vertical">
        <div id="top-pane">
            <div id="horizontal" style="height: 100%; width: 100%;">
                <div id="left-pane">
                    <div class="pane-content">
                        <p style="width: 100%; text-align: center">QUẢN LÝ HẠNG MỤC</p>
                        <div class="article-category-list">
