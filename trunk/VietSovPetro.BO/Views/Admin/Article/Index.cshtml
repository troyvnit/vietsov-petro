    <script>
        var wnd, dataItem, articleCategoryDataSource;

        $(document).ready(function () {
            //article category list view
            articleCategoryDataSource = new kendo.data.DataSource({
                transport: {
                    read: {
                        url: '@Url.Action("GetArticleCategories", "Article")',
                        type: "post",
                        dataType: "json"
                    },
                    update: {
                        url: '@Url.Action("CreateOrUpdateArticleCategories", "Article")',
                        type: "post",
                        dataType: "json"
                    },
                    destroy: {
                        url: '@Url.Action("DeleteArticleCategories", "Article")',
                        type: "post",
                        dataType: "json"
                    },
                    create: {
                        url: '@Url.Action("CreateOrUpdateArticleCategories", "Article")',
                        type: "post",
                        dataType: "json"
                    },
                    parameterMap: function (options, operation) {
                        if (operation !== "read" && options.models) {
                            return { models: kendo.stringify(options.models), page: options.page, pageSize: 6 };
                        }
                    }
                },
                batch: true,
                serverPaging: true,
                pageSize: 6,
                schema: {
                    model: {
                        id: "ArticleCategoryID",
                        fields: {
                            ArticleCategoryID: { editable: false, nullable: true },
                            ArticleCategoryName: { type: "string" },
                            ArticleCategoryType: { defaultValue: "Introduction" },
                            Description: { type: "string" },
                            LanguageCode: { defaultValue: "vi-VN" }
                        }
                    }
                }
            });


            $("#pager").kendoPager({
                dataSource: articleCategoryDataSource
            });

            var listView = $("#listView").kendoListView({
                dataSource: articleCategoryDataSource,
                template: kendo.template($("#template").html()),
                editTemplate: kendo.template($("#editTemplate").html())
            }).data("kendoListView");

            $(".k-add-button").click(function (e) {
                listView.add();
                e.preventDefault();
            });
            //article grid
            var articleDataSource = new kendo.data.DataSource({
                pageSize: 20,
                transport: {
                    read: {
                        url: '@Url.Action("GetArticles", "Article")',
                        type: "post",
                        dataType: "json"
                    },
                    update: {
                        url: '@Url.Action("CreateOrUpdateArticles", "Article")',
                        type: "post",
                        dataType: "json"
                    },
                    destroy: {
                        url: '@Url.Action("DeleteArticles", "Article")',
                        type: "post",
                        dataType: "json"
                    },
                    create: {
                        url: '@Url.Action("CreateOrUpdateArticles", "Article")',
                        type: "post",
                        dataType: "json"
                    },
                    parameterMap: function (options, operation) {
                        if (operation !== "read" && options.models) {
                            return { models: kendo.stringify(options.models) };
                        }
                    }
                },
                batch: true,
                schema: {
                    model: {
                        id: "ArticleID",
                        fields: {
                            ArticleID: { editable: false, defaultValue: "@Guid.NewGuid()" },
                            Title: { validation: { required: true } },
                            Description: { type: "string" },
                            Author: { validation: { required: true } },
                            Content: { validation: { required: true } },
                            ImageUrl: { type: "string" },
                            OrderID: { type: "number" },
                            LanguageCode: { defaultValue: "vi-VN", template: "#= LanguageCode #" },
                            IsPublished: { type: "boolean" },
                            IsNew: { type: "boolean" },
                            ArticleCategoryIDs: { type: "string" }
                        }
                    }
                }
            });
            $("#grid").kendoGrid({
                dataSource: articleDataSource,
                //dataBound: articleDataBound,
                pageable: true,
                height: 740,
                toolbar: ["create", "save", "cancel"],
                columns: [
                    { field: "Title", title: "Tiêu đề" },
                    { field: "Description", title: "Mô tả", width: "70px" },
                    { field: "Author", title: "Tác giả", width: "70px" },
                    { field: "Content", title: "Nội dung", hidden: true },
                    { field: "ImageUrl", title: "ImageUrl", hidden: true },
                    { field: "OrderID", title: "Thứ tự", width: "70px" },
                    { field: "LanguageCode", title: "Ngôn ngữ", editor: languageDropDownEditor, width: "80px" },
                    { field: "IsPublished", title: "Online ?", width: "80px" },
                    { field: "IsNew", title: "Mới ?", width: "50px" },
                    { command: [{ text: "Nội dung", click: contentEditor }, "destroy"], title: " ", width: "180px" }],
                editable: true,
                saveChanges: function (e) {
                    console.log(e.sender);
                    for (var i = 0; i < e.sender._data.length; i++) {
                        if (e.sender._data[i].Title == "") {
                            alert("Bài viết chưa có tiêu đề, vui lòng nhập tiêu đề trước khi lưu!");
                            e.preventDefault();
                        }
                        else if (e.sender._data[i].Author == "") {
                            alert("Bài viết chưa có tác giả, vui lòng nhập tác giả trước khi lưu!");
                            e.preventDefault();
                        }
                        else if (e.sender._data[i].Content == "") {
                            alert("Bài viết " + e.sender._data[i].Title + " chưa có nội dung, vui lòng nhập nội dung trước khi lưu!");
                            e.preventDefault();
                        } 
                        else {
                            console.log(typeof e.sender._data[i].ArticleCategoryIDs);
                            if (e.sender._data[i].ArticleCategoryIDs != null && e.sender._data[i].ArticleCategoryIDs.length != "" && typeof e.sender._data[i].ArticleCategoryIDs == "string") {
                                try {
                                    e.sender._data[i].ArticleCategoryIDs = e.sender._data[i].ArticleCategoryIDs.split(',');
                                } catch (ex) {
                                    var arr = [];
                                    arr.push(e.sender._data[i].ArticleCategoryIDs);
                                    e.sender._data[i].ArticleCategoryIDs = arr.toString();
                                }
                            }
                            e.sender._data[i].dirty = true;
                        }
                    }
                }
            });
            function languageDropDownEditor(container, options) {
                $('<input required data-text-field="Language" data-value-field="LanguageCode" data-bind="value:' + options.field + '"/>')
                    .appendTo(container)
                    .kendoDropDownList({
                        autoBind: false,
                        dataSource:
                            [
                                { Language: "Tiếng Việt", LanguageCode: "vi-VN" },
                                { Language: "Tiếng Anh", LanguageCode: "en-US" },
                                { Language: "Tiếng Nga", LanguageCode: "ru-RU" }
                            ]
                    });
            }
            wnd = $("#article-content")
                        .kendoWindow({
                            title: "Nội dung",
                            actions: ["Tick", "Minimize", "Maximize", "Close"],
                            modal: true,
                            visible: false,
                            resizable: false,
                            width: 960
                        }).data("kendoWindow");

            detailsTemplate = kendo.template($("#wtemplate").html());

            wnd.wrapper.find(".k-i-tick").click(function (e) {
                onSaveContentWindow();
                e.preventDefault();
                wnd.close();
            });
            
            function onSaveContentWindow() {
                var ceditor = $("#ceditor").data("kendoEditor");
                dataItem.Content = $('<div/>').text(ceditor.value()).html();
                console.log(dataItem.Content);
                var articlecategories = $("#articlecategories").data("kendoMultiSelect");
                $("#articlecategoryids").val(articlecategories.value());
                dataItem.ArticleCategoryIDs = articlecategories.value();
                console.log($("#mainfilename").val());
                if ($("#mainfilename").val() != null && $("#mainfilename").val() != "") {
                    dataItem.ImageUrl = dataItem.ImageUrl + "/" + $("#mainfilename").val();
                }
                wnd.refresh();
                $("#grid").data("kendoGrid").saveChanges();
                                @*if (dataItem.Title != "" && dataItem.Content != "") {
                    $.ajax({
                        url: '@Url.Action("CreateOrUpdateArticles", "Article")',
                        type: 'POST',
                        traditional: true,
                        dataType: "json",
                        contentType: "application/json",
                        data: kendo.stringify({
                            models: "[" + kendo.stringify(dataItem) + "]"
                        }),
                        success: function() { $("#grid").data("kendoGrid").dataSource.read(); }
                    });
                }*@
            }
        });

        @*function articleDataBound(e) {
            var grid = this;
            var img = this.tbody.find("img");
            this.tbody.find("input[name=imageUrl]").kendoUpload({
                multiple: false,
                async: {
                    saveUrl: '@Url.Action("SaveImages", "Common")',
                    autoUpload: true
                },
                upload: function (e) {
                    var item = grid.dataItem(this.element.closest("tr"));
                    e.data = { id: item.id };
                },
                success: function (e) {
                    var ImageUrl = e.response.ImageUrl;
                    var item = grid.dataItem(this.element.closest("tr"));
                    item.ImageUrl = ImageUrl;
                    item.dirty = true;
                    img.attr("src", ImageUrl);
                    console.log(ImageUrl);
                }
            });
    } *@
    function contentEditor(e) {
        e.preventDefault();
        dataItem = this.dataItem($(e.currentTarget).closest("tr"));
        wnd.content(detailsTemplate(dataItem));
        var arrFiles = [];
        $("#uploadimage").kendoUpload({
            multiple: true,
            async: {
                saveUrl: "/Common/SaveImages?folder=Article"
                },
            success: function (e) {
                var ImageUrl = e.response.Folder;
                dataItem.ImageUrl = ImageUrl;
            },
            select: onSelect
        });
        function onSelect(e) {
            $.map(e.files, function (file) {
                var info = file.name;
                var obj = { text: file.name, value: file.name };
                arrFiles.push(obj);
            }).join(",");
            $("#mainfilename").kendoDropDownList({
                dataTextField: "text",
                dataValueField: "value",
                dataSource: arrFiles,
                index: 0,
                change: onChangeMainFile
            });
        }
        function onChangeMainFile(e) {
            var url = dataItem.ImageUrl + "/" + $("#mainfilename").val();
            var ext = $("#mainfilename").val().split('.').pop();
            if (ext == "jpg" || ext == "jpeg" || ext == "gif" || "png") {
                $("#aimage").attr("src", "/Images/" + url);
            }
            console.log(dataItem.ImageUrl);
        }
            $("#uploadimage").closest(".k-upload").find("span").text("Chọn ảnh cho bài viết");
            $("#articlecategories").kendoMultiSelect({
                placeholder: "Chọn hạng mục cho bài viết...",
                dataTextField: "ArticleCategoryName",
                dataValueField: "ArticleCategoryID",
                dataSource: articleCategoryDataSource
            });
            var acmultiselect = $("#articlecategories").data("kendoMultiSelect");
            if (typeof dataItem.ArticleCategoryIDs == "string") {
                dataItem.ArticleCategoryIDs = dataItem.ArticleCategoryIDs.split(',');
            }
            acmultiselect.value(dataItem.ArticleCategoryIDs);
            $("#ceditor").kendoEditor({
                encoded: false,
                tools: [
                    "bold",
                    "italic",
                    "underline",
                    "strikethrough",
                    "fontName",
                    "fontSize",
                    "foreColor",
                    "backColor",
                    "justifyLeft",
                    "justifyCenter",
                    "justifyRight",
                    "justifyFull",
                    "insertUnorderedList",
                    "insertOrderedList",
                    "indent",
                    "outdent",
                    "formatBlock",
                    "createLink",
                    "unlink",
                    "insertImage",
                    "subscript",
                    "superscript",
                    "viewHtml"
                ]
            });
            //function onSaveContentWindow() {
            //    var ceditor = $("#ceditor").data("kendoEditor");
            //    dataItem.Content = $('<div/>').text(ceditor.value()).html();
            //    console.log(dataItem.Content);
            //    var articlecategories = $("#articlecategories").data("kendoMultiSelect");
            //    $("#articlecategoryids").val(articlecategories.value());
            //    dataItem.ArticleCategoryIDs = articlecategories.value();
            //    console.log($("#articlecategoryids").val());
            //}
        wnd.center().open();
    }
