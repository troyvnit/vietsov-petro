@using VietSovPetro.BO.ViewModels
@{
    List<VietSovPetro.BO.ViewModels.ArticleViewModel> articles = ViewBag.Articles;
    var articleDetail = (ArticleViewModel)ViewBag.Article;
    ViewBag.Title = articleDetail.Title;
    Layout = "~/Views/Shared/_LayoutFO.cshtml";
}

<div class="banner-G">
    <div class="B-Left">
        <div class="tt-B-Left">
            <p>@Resources.SR.Room_And_Price</p>
        </div>
        <div class="cc-B-Left">
          <ul>
              <li class="nut"><a href="@Url.Action("RoomAndPrice", "VietSovPetro")">Đặt phòng nhanh</a></li>
              <li class="tex"><p>@Resources.SR.Contact_Message_Banner</p></li>
              <li class="hot">
                  <ul>
                      <li><p>Điện thoại: (84.64) 3.782.256</p></li>
                      <li><p>Fax: @Resources.SR.ContactFax</p></li>
                  </ul>
              </li>
            </ul>
        </div>
    </div>
    <div class="B-Right">
        <iframe src="@Url.Content("/Images/virtualTour/HomePage/Vietsovptro_homepage.html")" style="width:100%; height:100%; display:block; border:none"></iframe>
    </div>
</div>
    <div class="in-booking">
            <div class="in-booking-1">
                <div class="in-booking-2">
                    <div class="booking">
                        <div class="tit-booking"><span>@articleDetail.Title</span></div><!--tit-booking-->
                        <div class="tett">
                            @Html.Raw(HttpUtility.HtmlDecode(articleDetail.Content))
                        </div><!--tett-->
                    </div><!--booking-->
                </div><!--in-booking-2-->
            </div><!--in-booking-1-->
    </div><!--in-booking-->   
<div class="in-retau">
    @foreach (var article in articles.Where(a => a.ArticleID != articleDetail.ArticleID))
    {
        if (article.OrderID != -1)
        {
        <!--boxRetau-->
        <div class="boxRetau">
            <div class="tt-boxRetau">
                <p>@article.Title</p>
            </div>
            <!--tt-boxRetau-->
            <div class="cc-boxRetau">
                <div class="picRetau">
                    @{ 
            if (Path.GetExtension(article.ImageUrl) == ".html")
            {
                        <iframe src="@article.ImageUrl"  style="width:584px; height:211px; display:block; border:none;"></iframe>
            }
            else
            {
                        <img src="@article.ImageUrl" alt="" style="width:584px; height:211px; display:block; border:none;"/>
            }
                    }
                </div>
                <!--picRetau-->
                <div class="ttRetau">
                    <ul>
                        @Html.Raw(HttpUtility.HtmlDecode(article.Description))
                    </ul>
                    <ul>
                        <li class="view"><a href="@Url.Action("DetailPage", "VietSovPetro", new { articleID = article.ArticleID, categoryID = ViewBag.CategoryID })" >Xem chi tiết</a></li>
                    </ul>
                </div>
                <!--ttRetau-->
            </div>
            <!--cc-boxRetau-->
        </div>
        <!--boxRetau-->
        }

    }
</div>
<!--in-retau-->