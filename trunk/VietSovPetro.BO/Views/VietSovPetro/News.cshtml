@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_LayoutFO.cshtml";
    List<VietSovPetro.BO.ViewModels.ArticleViewModel> articles = ViewBag.NewsArticles;
}

<div class="banner-G">
    <div class="B-Left">
        <div class="tt-B-Left">
            <p>@Resources.SR.Room_And_Price</p>
        </div>
        <div class="cc-B-Left">
          <ul>
              <li class="tex"><p>@Resources.SR.Contact_Message_Banner</p></li>
              <li class="hot">
                  <ul>
                      <li><p>Điện thoại: @Resources.SR.ContactPhone</p></li>
                      <li><p>Fax: @Resources.SR.ContactFax</p></li>
                  </ul>
              </li>
            </ul>
        </div>
    </div>
    <div class="B-Right">
        <iframe src="@Url.Content("~/images/virtualTour/RestaurantMain_2/RestaurantMain.html")" style="width:100%; height:100%; display:block; border:none"></iframe>
        <div class="fullscreen"><a href="#" style="display:block;"><img src="@Url.Content("~/images/fullsceen.png")" alt="" /></a></div>
    </div>
</div>
@foreach (var article in articles)
{
    <div class="in-booking">
            <div class="in-booking-1">
                <div class="in-booking-2">
                    <div class="booking">
                        <div class="tit-booking"><span>@article.Title</span></div><!--tit-booking-->
                        <div class="tett">
                            @Html.Raw(HttpUtility.HtmlDecode(article.Content))
                        </div><!--tett-->
                    </div><!--booking-->
                </div><!--in-booking-2-->
            </div><!--in-booking-1-->
        </div><!--in-booking-->   
}