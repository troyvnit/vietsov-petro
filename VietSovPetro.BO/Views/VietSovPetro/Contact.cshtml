<script language="javascript">
                                    function CheckFormMail()
                                    {
                                        with (document.FormName) {
                                            if (first_name.value == "") {
                                                alert("Mời bạn nhâp họ tên!");
                                                first_name.focus();
                                                return false;
                                            }

                                            if (email.value == "") {
                                                alert("Mời bạn nhập địa chỉ Email!");
                                                email.focus();
                                                return false;
                                            }
                                            else {
                                                if (email.value.indexOf("\@@") < 0 || email.value.indexOf(".") < 0) {
                                                    alert("Địa chỉ Email không hợp lệ!");
                                                    email.focus();
                                                    return false;
                                                }
                                            }

                                            if (title.value == "") {
                                                alert("Mời bạn nhập tiêu đề");
                                                title.focus();
                                                return false;
                                            }

                                            if (comments.value == "") {
                                                alert("Mời bạn nhập nội dung");
                                                comments.focus();
                                                return false;
                                            }
                                        }
                                             
                                            return true;
                                    }
                                    </script>
