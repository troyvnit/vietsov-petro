        }

        #room-type label
        {
            float: left;
            width: 10%;
            margin: 5px 0;
        }

        #room-type .k-upload-button
        {
            width: 100%;
        }

        #detailgrid
        {
            width: 100%;
            float: left;
        }
    </style>
</div>
